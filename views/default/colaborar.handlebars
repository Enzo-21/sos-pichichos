

<!-- Wrapper -->
<div id="wrapper" class="wrapper mb-5 pb-5">



    <!-- Start Breadcaump Area -->
    <div class="breadcaump-area pt--130 pb--50 bg_color--1 breadcaump-title-bar">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcaump-inner text-center">
                        <h1 class="heading heading-h1 pt-5 ">Colaborar</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcaump Area -->

    <!-- Page Conttent -->
    <main class="page-content">

        <!-- Start Portfolio Area -->
        <div class="brook-portfolio-area bg_color--1">
            <div class="container container-fluid content-row">
                {{#if donation}}
                <div class="row">

                    <!-- Start Single Portfolio -->
                    {{#each donation}}
                    <div class="col-lg-4 col-sm-6 col-12 move-up wow text-center mt-4 mb-1">
                        <div class="portfolio portfolio_style--1 mt--30 card h-100">
                            <div class="thumb card-body">
                                <h3 class="px-3">{{title}}</h3>
                                <p id="donationAmount"><span id="donationAmountSign">$</span>{{amount}}</p>
                                <p class="pt-4 dog-description">{{description}}</p>
                            </div>
                            

                            <button class="btn btn-yellow">
                                <a href="{{link}}" class="font-weight-bold text-white">Â¡Quiero ayudar!</a>
                            </button>
                        
                        </div>
                    </div>
                    <!-- End Single Portfolio -->
                    {{/each}}
                </div>
            </div>
        </div>
        <!-- End Portfolio Area -->

        {{/if}}
        <br>
        <br>
    </main>
    <!--// Page Conttent -->
</div>