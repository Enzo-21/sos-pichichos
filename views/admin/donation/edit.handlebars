<div class="container">
    <h1 class="text-center">Edit Pichicho Data</h1>

    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/donation/edit/{{donation._id}}?newMethod=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input type="text" class="form-control" required name="title" id="title" placeholder="Enter title"
                        value="{{donation.title}}">
                </div>

                <div class="form-group">
                    <label for="amount">Monto</label>
                    <input type="text" class="form-control" required name="amount" id="amount" placeholder="Enter amount"
                        value="{{donation.amount}}">
                </div>

                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea required name="description" id="description" class="form-control"
                        placeholder="Enter your content here" rows="10">{{donation.description}}</textarea>
                </div>

                <div class="form-group">
                    <label for="link">Link de mercadopago</label>
                    <input type="text" class="form-control" required name="link" id="link" placeholder="Enter link"
                        value="{{donation.link}}">
                </div>

                <button class="btn btn-outline-warning btn-large" type="submit">Editar</button>

            </form>
        </div>
    </div>

</div>