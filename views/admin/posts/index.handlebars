
                
                <div class="container">
    <h1 class="text-center">Contenido del Sitio</h1>

    {{#if homepageData}}

{{#each homepageData}}
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/posts/edit/{{_id}}?newMethod=PUT" method="POST">
            <h4 class="py-3">Sección Principal</h4>
                <div class="form-group">
                    <label class="font-weight-bold" for="title">Titulo Principal</label>
                    
                        <p>✏️ {{title}}</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold" for="updatedFile">Imagen Principal</label>
                    

                    <img class="admin-homepage-img m-2 border " src="{{file}}" alt="imagen">
                </div>


                <div class="form-group">
                    <label class="font-weight-bold" for="description">Subtítulo</label>
                   <p>✏️ {{description}}</p>
                </div>

                <hr class="my-5">
                <h4 class="py-3">Sección "{{titleTwo}}"</h4>

                <div class="form-group">
                    <label class="font-weight-bold" for="titleTwo">Título</label>
                    <p>✏️ {{titleTwo}}</p>

                       
                </div>

                <div class="form-group">
                    <label class="font-weight-bold" for="updatedFileTwo">Imagen</label>
                     <img class="admin-homepage-img m-2 border " src="{{fileTwo}}" alt="imagen">
                </div>

                <div class="form-group">
                    <label class="font-weight-bold" for="descriptionTwo">Contenido</label>
                    <p>✏️ {{descriptionTwo}}</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold" for="subtitleOne">Subtítulo 1</label>
                    <p>✏️ {{subtitleOne}}</p>
                </div>

                <div class="form-group pl-5 mb-5">
                    <label class="font-weight-bold" for="subtitleOne_info">Descripción</label>
                    <p>✏️ {{subtitleOne_info}}</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold" for="subtitleTwo">Subtítulo 2</label>
                  <p>✏️ {{subtitleTwo}}</p>
                </div>

                <div class="form-group pl-5 mb-5">
                    <label class="font-weight-bold" for="subtitleTwo_info">Descripción</label>
                    <p>✏️ {{subtitleTwo_info}}</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold" for="subtitleThree">Subtítulo 3</label>
                   <p>✏️ {{subtitleThree}}</p>
                </div>

                <div class="form-group pl-5 mb-5">
                    <label class="font-weight-bold" for="subtitleThree_info">Descripción</label>
                   <p>✏️ {{subtitleThree_info}}</p>
                </div>

               

                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-small btn-warning container-fluid">Editar</a>
                    

            </form>
            <form action="/admin/posts/delete/{{id}}?newMethod=DELETE" method="POST">
                        <button id="delete" class="btn btn-sm btn-danger p-2 my-1 container-fluid" type="submit">Borrar</button>
                    </form>
        </div>
    </div>
    {{/each}}

    {{else}}
    <div class="align-items-center justify-content-center vertical-align-center mt-5">
        <p>No hay contenido</p>
        <a href="/admin/posts/create">
        <button class="m-3 p-3 btn btn-success text-white">
            Crear!
        </button>
        </a>
    </div>

    {{/if}}
</div>