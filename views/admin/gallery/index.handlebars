<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">Galería de imágenes</h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody class="table-hover bg-dark category-list">
                {{#each gallery}}
                    <tr>

                        <td>{{file}}</td>
                        <td class="d-flex justify-content-center">
                            <form action="/admin/gallery/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <form action="/admin/gallery" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="file">Asegurarse de que el nombre de la imagen no contenga espacios</label>
                <input type="file" class="form-control" id="uploadedFile" name="uploadedFile">
            </div>

            <button class="btn btn-outline-success btn-large" type="submit">Subir</button>

        </form>


</div>